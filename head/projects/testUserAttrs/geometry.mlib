<?xml version="1.0" ?>
<materialLib name="Simple">

	<textures>
		<texture name="Crate" filename="../../models/Texturas/crate.jpg" />		
	</textures>
	<shaders>
		<shader name="simple" ps="shaders/simple.frag" vs="shaders/simple.vert" />
	</shaders>
	
	<materials>
		<material name="simpleTextured">
			<shader name="simple">
				<values>
					<valueof uniform="fogMin" 	type="STATE" context="CURRENT" 
														component="FOG_MIN_DIST" /> 
					
					<valueof uniform="fogMax" 	type="STATE" context="CURRENT" 
														component="FOG_MAX_DIST" /> 
					
					<valueof uniform="fogColor" 	type="VIEWPORT" context="CURRENT" 
														component="CLEAR_COLOR" /> 
														
					<valueof uniform="lightDir" 	type="LIGHT" context="CURRENT" 
														id=0 component="DIR" /> 
																
					<valueof uniform="dist" 	type="CAMERA" context="CURRENT" 
														component="DIST" /> 

					<valueof uniform="PVM"          	type="RENDERER" context="CURRENT" 
														component="PROJECTION_VIEW_MODEL" />
														
					<valueof uniform="VM"          	type="RENDERER" context="CURRENT" 
														component="VIEW_MODEL" />
														
					<valueof uniform="V"          	type="RENDERER" context="CURRENT" 
														component="VIEW" />
														
					<valueof uniform="NormalMat"   	type="RENDERER" context="CURRENT" 
														component="NORMAL" />
														
					<valueof uniform="texUnit"		type="MATERIAL_TEXTURE" context="CURRENT"
														id=1 component="UNIT" />
														
				</values>
			</shader>
			<textures>
				<texture name="Crate" UNIT="1" />
			</textures>
			<state>
				<!-- Both attributes are user attributes -->
				<FOG_MIN_DIST value = 1 />
				<FOG_MAX_DIST value = 100.0 />
			</state>
		</material>
	</materials>
</materialLib>
