<?xml version="1.0" ?>
<materialLib name="Image Load Store">

	<renderTargets>
		<renderTarget name ="test">
			<size width="512" height="512" />
			<colors>
				<color name="offscreenrender" internalFormat="RGBA" />
			</colors>
		</renderTarget>
	</renderTargets>
	
	<textures>
		<texture name="tex">
			<WIDTH value=512 />
			<HEIGHT value=512 />
			<INTERNAL_FORMAT value="RGBA" />
		</texture>	
		<texture name="Grade_01_02_03" filename="../../Texturas/AL01_Grade1.tif" mipmap="1" />
	</textures>

	<shaders>
		<shader name="testImageLS" 	vs="shaders/testImageLS.vert" 
									ps="shaders/testImageLS.frag" /> 
		
	</shaders>
	
	<materials>
		<material name ="imageStore">
			<shader>
				<name>testImageLS</name>
				<values>
					<valueof uniform="imageUnit"		type="CURRENT" context="TEXTURE"
														id=1 component="UNIT" />
					<valueof uniform="texUnit"		type="CURRENT" context="TEXTURE"
														id=0 component="UNIT" />														
				</values>
			</shader>
			<textures>
				<texture name="offscreenrender" UNIT=0 />
			</textures>
			<imageTextures>
				<imageTexture UNIT=1 texture="tex" >
					<ACCESS value="WRITE_ONLY" />
					<LEVEL value=0 />
					<CLEAR value=true />
				</imageTexture>
			</imageTextures>
		
		</material>
	
	</materials>

</materialLib>