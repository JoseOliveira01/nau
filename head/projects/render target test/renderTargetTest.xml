<?xml version="1.0" ?>
<project name="Render Target Test" width=512 height=512>
	<assets>
		<scenes>
			<scene name="MainScene">
				<file name="../../models/cube.obj"/>
			</scene>
		</scenes>
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1 FAR=100.0 />
				<POSITION x=0 y=-0.5 z=7.5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
		</cameras>
		<lights>
			<light name="Sun" >
				<POSITION x="-150.0" y="150.0" z="0.0" />
				<DIRECTION x="1.0" y="-0.5" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>
		<materialLibs>
			<materialLib filename="testRenderTargets.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<renderTarget name="test" fromLibrary="Test Render Targets" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
			
			<pass class="quad" name="pass2">
				<viewport name="MainViewport" />
				<texture name="offscreenrender" fromLibrary="Test Render Targets" />
			</pass>
		</pipeline>
	</pipelines>
</project>