<?xml version="1.0" ?>
<project name="Voxels" width=512 height=512>
	<assets>
		<constants>
			<constant name="GridSize" value = 128 />
		</constants>
		<scenes>
			<scene name="MainScene" param="UNITIZE">
				<file name="../../models/apple.obj"/>
			</scene>
			<scene name="VoxelTest" param="UNITIZE">
				<file name="../../models/voxeltest.obj"/>
			</scene>
			<scene name="Bench" param="UNITIZE">
				<file name="../../models/bench.obj"/>
			</scene>
			<scene name="Dummy" >
				<buffers name="positions" primitive="POINTS" material="showRays">
					<position name="position" fromLibrary="Voxels" />				
				</buffers>	
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
			
			<viewport name="Grid">
				<CLEAR_COLOR r="0.0" g="1.0" b="0.0" />
				<SIZE x="GridSize" y="GridSize" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60 NEAR=0.1 FAR=20.0 />
				<POSITION x=0 y=0.0 z=5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			
			<camera name="zz">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=0.0 z=1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="xx">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=1.0 y=0.0 z=0.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="yy">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=1.0 z=0.0 />
				<UP x=0 y=0 z=1 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<!--POSITION x="-150.0" y="150.0" z="0.0" /-->
				<DIRECTION x="1.0" y="-0.5" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>

		<atomics>
			<atomic buffer="Voxels::atomic" offset=0  semantics="count" />
		</atomics>
		
		<materialLibs>
		<materialLib filename="voxels.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="voxels" default="true">
			<pass class="default" name="voxelization">
				<!--mode value="RUN_ONCE" /-->
				<viewport name="Grid"/>
				<camera name="MainCamera" />
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<color clear=false enable=false />
				<depth test=false write=false />
				<renderTarget name="dummy" fromLibrary="Voxels" />
				<materialMaps>			
					<map fromMaterial="*" 
						 toLibrary="Voxels" toMaterial="voxelization" />
				</materialMaps>				
			</pass>
			
			<pass class="default" name="showVoxels">
				<scenes>
					<scene name="Dummy" />
				</scenes>	
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<materialMaps>			
					<map fromMaterial="showRays" 
						 toLibrary="Voxels" toMaterial="showVoxels" />
				</materialMaps>				
			</pass>
		</pipeline>
		<pipeline name="debug">
			<pass class="default" name="voxelization">
				<viewport name="MainViewport"/>
				<camera name="MainCamera" />
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<depth test=false write=false />
				<materialMaps>			
					<map fromMaterial="*" 
						 toLibrary="Voxels" toMaterial="voxelization" />
				</materialMaps>				
			</pass>
		</pipeline>
	</pipelines>
</project>