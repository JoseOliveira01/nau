<?xml version="1.0" ?>
<project name="Voxels" width=512 height=512>
	<assets>
		<constants>
			<constant name="GridSize" value = 256 />
			<constant name="GridVolume" value = 16777216 />
		</constants>
		<attributes>
			<attribute name="GridSize" context="PASS" type="INT" value="GridSize" />
			<attribute name="GridLevels" context="PASS" type="INT" value=7 />
			<attribute name="GridCurrentLevel" context="PASS" type="INT" value=0 />
		</attributes>
		<scenes>
			<scene name="MainScene" param="UNITIZE">
				<file name="../../models/cube.obj"/>
			</scene>
			<scene name="VoxelTest" param="UNITIZE">
				<file name="../../models/sponza/crytek-sponza/sponza.cbo"/>
			</scene>
			<scene name="Bench" param="UNITIZE">
				<file name="../../models/bench.obj"/>
			</scene>
			<scene name="Cube" >
				<file name="../../models/cube2.obj"/>
			</scene>
			<scene name="cubePos" >
				<buffers name="cubePos" primitive="TRIANGLES" material="drawCubes">
					<position name="position" fromLibrary="Voxels" />				
				</buffers>	
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
			
			<viewport name="Grid">
				<CLEAR_COLOR r="0.0" g="1.0" b="0.0" />
				<SIZE x="GridSize" y="GridSize" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60 NEAR=0.1 FAR=20.0 />
				<POSITION x=0 y=0.0 z=5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			
			<camera name="zz">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=0.0 z=1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="xx">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=1.0 y=0.0 z=0.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="yy">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=1.0 z=0.0 />
				<UP x=0 y=0 z=1 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>

		<atomics>
			<atomic buffer="Voxels::atomic" offset=0  semantics="count" />
			<atomic buffer="Voxels::atomic" offset=4  semantics="primCount" />
			<atomic buffer="Voxels::atomic" offset=8  semantics="firstIndex" />
			<atomic buffer="Voxels::atomic" offset=12  semantics="baseVertex" />
			<atomic buffer="Voxels::atomic" offset=16  semantics="baseInstance" />
		</atomics>
		
		<materialLibs>
			<materialLib filename="voxels.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="voxels" default="true">
			<pass class="default" name="voxelization">
				<mode value="RUN_ONCE" />
				<viewport name="Grid"/>
				<camera name="MainCamera" />
				<scenes>
					<scene name="VoxelTest" />
				</scenes>
				<color clear=false enable=false />
				<depth test=false write=false />
				<renderTarget name="dummy" fromLibrary="Voxels" />
				<injectionMaps>
					<map toMaterial="*" >
						<shader fromMaterial ="voxelization" fromLibrary="Voxels" />
						<state name="voxelization" fromLibrary="Voxels" />
						<imageTextures>
							<imageTexture texture="gridColor" fromLibrary="Voxels" toUnit=1 >
								<ACCESS value="WRITE_ONLY" />
								<LEVEL value=0 />
							</imageTexture>
							<!--imageTexture texture="gridNormal" fromLibrary="Voxels" toUnit=2 >
								<ACCESS value="WRITE_ONLY" />
								<LEVEL value=0 />
							</imageTexture-->
						</imageTextures>
					</map>
				</injectionMaps>
				<preProcess>
					<texture name="gridColor" fromLibrary="Voxels" CLEAR_LEVEL=0  />
				</preProcess>	
				<postProcess>
					<texture name="gridColor" fromLibrary="Voxels" MIPMAP=true  />
				</postProcess>	
			</pass>
			
			<pass class="compute" name="computeCubePos">
				<mode value=RUN_ONCE />
				<preProcess>
					<buffer name="atomic" fromLibrary="Voxels" CLEAR=1  />
				</preProcess>	
				<material name="computeCubePos" fromLibrary="Voxels" dimX=32, dimY=32 dimZ=32 />
			</pass>
				
			<pass class="default" name="showVoxels">
				<scenes drawIndirectBuffer="Voxels::atomic">
					<scene name="Cube" />
				</scenes>	
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<materialMaps>			
					<map fromMaterial="*" 
						 toLibrary="Voxels" toMaterial="showVoxelCubes" />
				</materialMaps>				
			</pass>
		</pipeline>
		
	</pipelines>
</project>