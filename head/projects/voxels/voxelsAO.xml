<?xml version="1.0" ?>
<project name="Voxels" width=1024 height=1024>
	<assets>
		<constants>
			<constant name="GridSize" value = 512 />
			<constant name="CompRO" value = 64 /> <!-- GridSize/8 -->
			<constant name="GridLevels" value = 9 /> <!-- log2(GridSize) -->
		</constants>
		<attributes>
			<attribute name="GridSize" context="PASS" type="INT" value="GridSize" />
			<attribute name="GridLevels" context="PASS" type="INT" value="GridLevels" />
			<attribute name="GridCurrentLevel" context="PASS" type="INT" value=0 />
		</attributes>
		<scenes>
			<scene name="MainScene" param="UNITIZE">
				<file name="../../models/cube.obj"/>
			</scene> 
			<scene name="VoxelTest" param="UNITIZE">
				<file name="../../models/voxeltest.obj"/>
			</scene>
			<scene name="Bench" param="UNITIZE">
				<file name="../../models/ntg-bench/bench.obj"/>
			</scene>
			<scene name="Sponza" param="UNITIZE">
				<file name="../../models/sponza/crytek-sponza/sponza.cbo"/>
			</scene>
			<scene name="Cube" >
				<file name="../../models/cube.obj"/>
			</scene>
			<scene name="Dummy" >
				<buffers name="positions" primitive="POINTS" material="showRays">
					<position name="dummy" fromLibrary="Voxels" />				
				</buffers>	
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
			
			<viewport name="Grid">
				<CLEAR_COLOR r="0.0" g="1.0" b="0.0" />
				<SIZE x="GridSize" y="GridSize" />
			</viewport>
		</viewports>

		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60 NEAR=0.001 FAR=4.0 />
				<POSITION x=-0.086625 y=-0.232029 z=-0.005232 />
				<VIEW x=0.999476 y=-0.01 z=-0.03079 />
				<UP x=0 y=1 z=0 />
			</camera>
			
			<camera name="zz">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=0.0 z=1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="xx">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=1.0 y=0.0 z=0.0 />
				<UP x=0 y=1 z=0 />
			</camera>
			<camera name="yy">
				<viewport name="Grid" />
				<projection TYPE="ORTHO"  NEAR=-1 FAR=1 LEFT=-1 RIGHT=1 BOTTOM=-1 TOP=1 />
				<POSITION x=0 y=0.0 z=0.0 />
				<VIEW x=0.0 y=1.0 z=0.0 />
				<UP x=0 y=0 z=1 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>
		
		<materialLibs>
		<materialLib filename="voxels.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="voxels" default="true" defaultCamera = "MainCamera">
		
			<pass class="default" name="voxelization">
				<mode value="RUN_ONCE" />
				<viewport name="Grid"/>
				<camera name="MainCamera" />
				<scenes>
					<scene name="Sponza" />
				</scenes>
				<color clear=false enable=false />
				<depth test=false write=false />
				<renderTarget name="dummy" fromLibrary="Voxels" />
				<injectionMaps>
					<map toMaterial="*" >
						<shader fromMaterial ="voxelization" fromLibrary="Voxels" />
						<state name="voxelization" fromLibrary="Voxels" />
						<imageTextures>
							<imageTexture texture="gridColor" fromLibrary="Voxels" toUnit=1 />

							<!--imageTexture texture="gridNormal" fromLibrary="Voxels" toUnit=2 -->

						</imageTextures>
					</map>
				</injectionMaps>
				<preProcess>
					<texture name="gridColor" fromLibrary="Voxels" CLEAR_LEVEL=0  />
					<!--texture name="gridNormal" fromLibrary="Voxels" CLEAR_LEVEL=0 /-->
					<buffer name="atomic" fromLibrary="Voxels" CLEAR=true />
				</preProcess>	
				<postProcess>
					<!--texture name="gridColor" fromLibrary="Voxels" MIPMAP=true  /-->
					<!--texture name="gridNormal" fromLibrary="Voxels" MIPMAP=true /-->
				</postProcess>	
			</pass>
			
			<pass class="compute" name="resetOpacity" >
				<mode value="RUN_ONCE" />
				<material name="resetOpacity"  fromLibrary="Voxels" dimX="CompRO" dimY="CompRO" dimZ="CompRO" />
			</pass>
			
			<pass class="compute" name="mipmap" >
				<mode value="RUN_ONCE" />
				<testScript file="test.lua" script="test" TEST_MODE="RUN_WHILE"/>
				<material name="mipmap" fromLibrary="Voxels" dimX=256 dimY=256 dimZ=256 />
			</pass>

			<pass class="default" name="renderScene">
				<scenes>
					<scene name="Sponza" />
				</scenes>	
				<lights>
					<light name="Sun" />
				</lights>	
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<renderTarget name="scene" fromLibrary="Voxels" />
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="renderScene" fromLibrary="Voxels" />
					</map>
				</injectionMaps>
			</pass>
			
			<pass class="quad" name="computeAO" >
				<material name="computeAO" fromLibrary="Voxels" />
				<viewport name="MainViewport" />
			</pass>
			
			<!--pass class="quad" name="show" >
				<texture name="pos" fromLibrary="Voxels" />
				<viewport name="MainViewport" />
			</pass-->
		</pipeline>
	</pipelines>
</project>