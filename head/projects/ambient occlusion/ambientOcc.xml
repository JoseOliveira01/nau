<?xml version="1.0" ?>
<project name="try" width=1500 height=300>
	<assets>
		<scenes>
			<scene name="MainScene" >
				<file name="../../models/sponza/crytek/sponza.obj"/>
				<!--file name="../../models/Teapot.3ds"/-->
			</scene>
			<scene name="Rays" >
				<buffers primitive="LINES" material="showRays">
					<position value="Ambient Occlusion::position" />				
				</buffers>	
			</scene>
		</scenes>
		<viewports>
			<viewport name="dummy" >
				<ORIGIN x=0.0 y=0.0 />
				<SIZE width=100 height=100 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SmallViewport1" >
				<ORIGIN x=0.0 y=0.0 />
				<SIZE width=0.20 height=1 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SmallViewport2" >
				<ORIGIN x=0.20 y=0.0 />
				<SIZE width=0.20 height=1 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SmallViewport3" >
				<ORIGIN x=0.40 y=0.0 />
				<SIZE width=0.20 height=1 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SmallViewport4" >
				<ORIGIN x=0.60 y=0.0 />
				<SIZE width=0.20 height=1 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SmallViewport5" >
				<ORIGIN x=0.80 y=0.0 />
				<SIZE width=0.20 height=1 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
		</viewports>
		<cameras>
			<camera name="MainCamera" >
				<viewport name="dummy" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1 FAR="5000.0" />
				<POSITION x="0.0" y="15.0" z="125.0" />
				<VIEW x="0.0" y="0.0" z="-1.0" />
				<UP x="0.0" y="1.0" z="0.0" />
			</camera>
		</cameras>
		<lights>
			<light name="Sun" type="directional">
				<DIRECTION x="1" y="-1" z="1" />
				<COLOR r="0.9" g="0.9" b="0.9" />
			</light>
		</lights>
		<materialLibs>
			<materialLib filename="ambientOcc.mlib"/>
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="ao" default="true" defaultCamera="MainCamera">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<rendertarget name="info" fromLibrary="Ambient Occlusion"/>	
				<materialMaps>
					<map fromMaterial="*" toLibrary="Ambient Occlusion" toMaterial="gatherInfo" />
				</materialMaps>
			</pass>
			<pass class="quad" name="fillRayBuffer" >
				<rendertarget name="dummy" fromLibrary="Ambient Occlusion" />
				<materialMaps>			
					<map fromMaterial="__Quad" 
						 toLibrary="Ambient Occlusion" toMaterial="fillRayBuffer" />
				</materialMaps>				
			</pass>
			<pass class="default" name="pass2">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport>SmallViewport1</viewport>
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
			<!-- <pass class="quad" name="pass3">
				<viewport>SmallViewport2</viewport>
				<texture name="depthMap" fromLibrary="Ambient Occlusion"/>
			</pass> -->
			<pass class="quad" name="pass4">
				<viewport>SmallViewport2</viewport>
				<texture name="normalMap" fromLibrary="Ambient Occlusion"/>
			</pass>
			<!-- <pass class="quad" name="pass5">
				<viewport>SmallViewport4</viewport>
				<texture name="posMap" fromLibrary="Ambient Occlusion"/>
			</pass> -->
			<pass class="quad" name="pass6">
				<rendertarget name="shadows" fromLibrary="Ambient Occlusion"/>	
				<materialMaps>
					<map fromMaterial="__Quad" toLibrary="Ambient Occlusion" toMaterial="ambOcc" />
				</materialMaps>
			
			</pass>
			<pass class="quad" name="pass7">
				<viewport>SmallViewport3</viewport>
				<texture name="occMap" fromLibrary="Ambient Occlusion"/>	
			</pass>
			<pass class="quad" name="pass8">
				<viewport>SmallViewport4</viewport>
				<texture name="occMap2" fromLibrary="Ambient Occlusion"/>	
			</pass>
			
			<pass name="Optix Prime" class="optixPrime">
				<scene name="MainScene" />
				<rays buffer="Ambient Occlusion::rays" queryType = "ANY"/> 
				<hits buffer ="Ambient Occlusion::hits" />
			</pass>	 
			
			<pass class="compute" name="computeLineRays">
				<material name="computeLineRays" fromLibrary="Ambient Occlusion" dimX=1, dimY=1 dimZ=1 />
			</pass>
			
			<pass class="default" name="showRays">
				<scenes>
					<scene name="Rays" />
				</scenes>
				<camera name="MainCamera" />
				<viewport>SmallViewport3</viewport>
				<color clear=false />
				<materialMaps>
					<map fromMaterial="showRays" 
						 toLibrary="Ambient Occlusion" toMaterial="showRays" />
				</materialMaps>	
			</pass>

			<pass class="quad" name="pass9">
				<rendertarget name="optix" fromLibrary="Ambient Occlusion"/>	
				<materialMaps>
					<map fromMaterial="__Quad" 
						 toLibrary="Ambient Occlusion" toMaterial="compose" />
				</materialMaps>	
			</pass>
			<pass class="quad" name="pass10">
				<viewport>SmallViewport5</viewport>
				<texture name="optixTex" fromLibrary="Ambient Occlusion"/>
			</pass>
		</pipeline>
	</pipelines>
</project>