<?xml version="1.0" ?>
<project name="Surgery Simulation" width="512" height="512">
	<assets>
		<scenes>
			<scene name="breast">
				<buffers name="breastB" primitive="TRIANGLES" material="breastBuff">
					<position name="position" fromLibrary="Breast_Surgery" />
					<index name="index" fromLibrary="Breast_Surgery" />
				</buffers>
			</scene>
			<scene name="AL">
				<file name="../../models/al.obj"/>
			</scene>
		</scenes>
	
		<viewports>
			<viewport name="MainView" >
				<CLEAR_COLOR  r="0.0" g="0.0" b="0.0" />
			</viewport>
			<viewport name="FrontView" >
				<ORIGIN x=0.0 y=0.0 />
				<SIZE width=0.50 height=0.50 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.4" />
			</viewport>
			<viewport name="SideView" >
				<ORIGIN x=0.5 y=0.0 />
				<SIZE width=0.50 height=0.50 />
				<CLEAR_COLOR  r="0.4" g="0.2" b="0.2" />
			</viewport>
			<viewport name="TopView" >
				<ORIGIN x=0.0 y=0.5 />
				<SIZE width=0.50 height=0.50 />
				<CLEAR_COLOR  r="0.2" g="0.4" b="0.2" />
			</viewport>
			<viewport name="BackView" >
				<ORIGIN x=0.5 y=0.5 />
				<SIZE width=0.50 height=0.50 />
				<CLEAR_COLOR  r="0.2" g="0.2" b="0.2" />
			</viewport>
		</viewports>
	
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainView"/>
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value=0.01/>
				<FAR value=100/>
				<POSITION x=0.0 y=0.0 z=2.0/>
				<LOOK_AT_POINT x=0.0 y=0.0 z=0.0/>
			</camera>
			<camera name="SideCamera">
				<viewport name="MainView"/>
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value=1/>
				<FAR value=100/>
				<POSITION x=-10.0 y=0.0 z=0.0/>
				<LOOK_AT_POINT x=0.0 y=0.0 z=0.0/>
			</camera>
			<camera name="TopCamera">
				<viewport name="MainView"/>
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value=1/>
				<FAR value=100/>
				<POSITION x=0.0 y=10.0 z=1.0/>
				<LOOK_AT_POINT x=0.0 y=0.0 z=0.0/>
			</camera>
			<camera name="BackCamera">
				<viewport name="MainView"/>
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value=1/>
				<FAR value=100/>
				<POSITION x=0.0 y=0.0 z=-10.0/>
				<LOOK_AT_POINT x=0.0 y=0.0 z=0.0/>
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-1 z=2 />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="surgery_simulator.mlib"/>
		</materialLibs>
		
	</assets>
	
	<pipelines>
		<pipeline name="fixedfunction" default="true" defaultCamera="MainCamera">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="breast"/>
				</scenes>
				<camera name="MainCamera"/>
				<viewport name="FrontView"/>
				<!--material name="breastBuff" fromLibrary="Breast_Surgery" /-->
				<lights>
					<light name="Sun"/>
				</lights>
				<materialMaps>
					<map fromMaterial="*" toLibrary="Breast_Surgery" toMaterial="breastBuff" />
				</materialMaps>
				
			</pass>
			<pass class="default" name="pass2">
				<scenes>
					<scene name="AL"/>
				</scenes>
				<camera name="SideCamera"/>
				<viewport name="SideView" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
			<pass class="default" name="pass3">
				<scenes>
					<scene name="AL"/>
				</scenes>
				<camera name="TopCamera"/>
				<viewport name="TopView" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
			<pass class="default" name="pass4">
				<scenes>
					<scene name="AL"/>
				</scenes>
				<camera name="BackCamera"/>
				<viewport name="BackView" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
		</pipeline>
	</pipelines>
</project>	